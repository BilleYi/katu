.index-swiper{
  margin: 20rpx;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
margin-top: 90rpx;
}
.index-swiper image{
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}
.index-Tab{
display: flex;  

}
.index-Tab view{
  flex: 1;
  text-align:center;
  margin: 10rpx;
}
.index-Tab view.active{
  color: red;
  border-bottom: 1px solid red;
}
.index-list{

display: flex;
flex-wrap: wrap;
color: hotpink;
}
.index-listitem{
  width: 50%;
 margin: 10rpx 0;
}
.index-listitem image{
  width: 90%;
  height: 250rpx;
  margin: 0 auto;
  display: block;
}
.index-listtext{
display: flex;
width: 90%;
justify-content: space-between;
margin: 0 auto;
}